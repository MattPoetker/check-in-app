<div class="bg-gray-100 py-8">
  <div class="max-w-md mx-auto p-6 rounded shadow-md bg-white">
    <div class="col-lg-4 offset-lg-4">
      <h1 class="text-left text-3xl font-bold text-gray-900 mb-4">Sign Up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.text_field :name, autofocus: false, class: 'form-control px-4 py-2 rounded border border-gray-400 w-full', placeholder: "Full name" %>
      </div>

      <div class="mb-3">
        <%= f.email_field :email, autofocus: false, class: 'form-control px-4 py-2 rounded border border-gray-400 w-full', placeholder: "Email Address" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control px-4 py-2 rounded border border-gray-400 w-full', placeholder: 'Password' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control px-4 py-2 rounded border border-gray-400 w-full', placeholder: 'Confirm Password' %>
      </div>

      <div class="mb-3 d-grid">
        <%= f.submit "Sign up", class: "btn" %>
      </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>
