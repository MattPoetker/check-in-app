


<div class="row">
  <div class="col-sm-6">
    <h1>Events</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_event_path, class: 'btn btn-primary' do %>
    Add New Event
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>User</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Location address</th>
            <th>Itinerary</th>
            <th>Capacity</th>
            <th>Capacity unit</th>
            
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <%= content_tag :tr, id: dom_id(event), class: dom_class(event) do %>
          
            <td><%= link_to event.name, event %></td>
          

                      <td><%= event.user %></td>
                      <td><%= event.start_date %></td>
                      <td><%= event.end_date %></td>
                      <td><%= event.location_address %></td>
                      <td><%= event.itinerary %></td>
                      <td><%= event.capacity %></td>
                      <td><%= event.capacity_unit %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
