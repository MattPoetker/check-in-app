<% flash.each do |msg_type, message| %>
  <div class="mx-auto">
    <div class="py-4 px-6  <%= tailwind_class_for(msg_type) %> flex justify-between" role="alert">
      <%= message %>
      <button type="button" class="btn-close" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>
<% end %>
